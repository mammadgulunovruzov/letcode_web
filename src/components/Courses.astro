<style>
	.courses {
		padding: 100px 0;
		background: var(--light-bg);
	}

	.courses-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		align-items: stretch;
	}

	.course-card {
		background: white;
		padding: 2.5rem;
		border-radius: 16px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
		border: 1px solid rgba(64, 224, 208, 0.1);
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.course-card.clickable {
		cursor: pointer;
		user-select: none;
	}

	.course-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 20px 40px rgba(64, 224, 208, 0.2);
		border-color: var(--turquoise);
	}

	.course-icon {
		width: 60px;
		height: 60px;
		background: var(--gradient);
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 1.5rem;
	}

	.course-icon svg {
		width: 30px;
		height: 30px;
		color: white;
	}

	.course-card h3 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: var(--text-dark);
	}

	.course-card p {
		color: var(--text-gray);
		line-height: 1.6;
		flex-grow: 1;
	}

	.course-duration {
		margin-top: 1.5rem;
		padding-top: 1rem;
		border-top: 1px solid rgba(64, 224, 208, 0.15);
		color: var(--text-gray);
		font-size: 0.95rem;
		font-weight: 500;
		white-space: nowrap;
	}

	@media (max-width: 768px) {
		.courses {
			padding: 60px 0;
		}

		.courses-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.course-card {
			padding: 2rem;
		}
	}
</style>