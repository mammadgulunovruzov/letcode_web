<style>
	.about {
		padding: 100px 0;
		background: var(--light-bg);
	}

	.about-content {
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
	}

	.about-text {
		margin-bottom: 4rem;
	}

	.about-text p {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--text-gray);
		margin-bottom: 1.5rem;
		text-align: left;
	}

	.stats {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
