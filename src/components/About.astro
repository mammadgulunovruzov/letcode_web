<style>
	.about {
		padding: 100px 0;
		background: var(--light-bg);
	}

	.about-content {
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
	}

	.about-text {
		margin-bottom: 4rem;
	}

	.about-text p {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--text-gray);
		margin-bottom: 1.5rem;
		text-align: left;
	}

	.stats {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}

	.stat-item {
		text-align: center;
		padding: 1.5rem;
		background: white;
		border-radius: 16px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		border: 1px solid rgba(64, 224, 208, 0.1);
		transition: all 0.3s ease;
	}

	.stat-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 40px rgba(64, 224, 208, 0.2);
		border-color: var(--turquoise);
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
	}

	.stat-label {
		color: var(--text-gray);
		font-weight: 500;
	}

	@media (max-width: 768px) {
		.about {
			padding: 60px 0;
		}

		.about-text p {
			font-size: 1rem;
		}

		.stats {
			grid-template-columns: repeat(2, 1fr);
			gap: 1.5rem;
		}

		.stat-number {
			font-size: 2rem;
		}
	}
</style>