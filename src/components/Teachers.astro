<style>
	.teachers {
		padding: 100px 0;
		background: var(--dark-bg);
	}

	.teachers .section-title {
		font-size: 2rem;
		margin-bottom: 3rem;
	}

	.teachers-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.teacher-card {
		background: rgba(255, 255, 255, 0.05);
		padding: 2.5rem;
		border-radius: 20px;
		transition: all 0.3s ease;
		border: 1px solid rgba(64, 224, 208, 0.1);
		backdrop-filter: blur(10px);
		position: relative;
		z-index: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		min-height: 450px;
	}

	.teacher-card.clickable {
		cursor: pointer;
		user-select: none;
	}

	.teacher-card:hover {
		transform: translateY(-10px);
		background: rgba(255, 255, 255, 0.1);
		border-color: var(--turquoise);
		box-shadow: 0 20px 40px rgba(64, 224, 208, 0.2);
		z-index: 5;
	}

	.teacher-image {
		width: 120px;
		height: 120px;
		margin-bottom: 1.5rem;
		border-radius: 50%;
		overflow: hidden;
		border: 4px solid transparent;
		background: var(--gradient);
		padding: 4px;
		flex-shrink: 0;
	}

	.teacher-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 50%;
	}

	.teacher-info {
		text-align: center;
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.teacher-info h3 {
		font-size: 1.4rem;
		font-weight: 600;
		color: var(--text-light);
		margin-bottom: 0.5rem;
	}

	.teacher-role {
		color: var(--turquoise);
		font-weight: 500;
		font-size: 1rem;
		margin-bottom: 1rem;
	}

	.teacher-workplace {
		color: var(--text-gray);
		font-size: 0.9rem;
		line-height: 1.5;
		text-align: center;
	}

	@media (max-width: 768px) {
		.teachers {
			padding: 60px 0;
		}

		.teachers .section-title {
			font-size: 1.5rem;
			margin-bottom: 2rem;
		}

		.teachers-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.teacher-card {
			padding: 2rem;
			min-height: 400px;
		}

		.teacher-image {
			width: 100px;
			height: 100px;
			margin-bottom: 1rem;
		}

		.teacher-info h3 {
			font-size: 1.2rem;
		}

		.teacher-role {
			font-size: 0.9rem;
		}

		.teacher-workplace {
			font-size: 0.85rem;
		}
	}
</style>

