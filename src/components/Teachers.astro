<style>
	.teachers {
		padding: 100px 0;
		background: var(--dark-bg);
	}

	.teachers .section-title {
		font-size: 2rem;
		margin-bottom: 1rem;
	}

	.teachers-carousel {
		position: relative;
		max-width: 1200px;
		margin: 0 auto;
	}

	.teachers-wrapper {
		overflow: hidden;
		border-radius: 20px;
	}

	.teachers-container {
		display: flex;
		transition: transform 0.5s ease;
		gap: 2.5rem;
	}

	.carousel-btn {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		background: rgba(255, 255, 255, 0.2);
		border: 2px solid var(--turquoise);
		color: white;
		font-size: 2rem;
		width: 50px;
		height: 50px;
		border-radius: 50%;
		cursor: pointer;
		transition: all 0.3s ease;
		z-index: 10;
		backdrop-filter: blur(10px);
	}

	.carousel-btn:hover {
		background: var(--turquoise);
		transform: translateY(-50%) scale(1.1);
	}

	.prev-btn {
		left: -25px;
	}

	.next-btn {
		right: -25px;
	}

	.teacher-card {
		text-align: center;
		background: rgba(255, 255, 255, 0.05);
		padding: 3rem;
		border-radius: 20px;
		transition: all 0.3s ease;
		border: 1px solid rgba(64, 224, 208, 0.1);
		backdrop-filter: blur(10px);
		min-width: calc(50% - 1.25rem);
		flex-shrink: 0;
		min-height: 400px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		position: relative;
		z-index: 1;
	}

	.teacher-card:hover {
		transform: translateY(-10px);
		background: rgba(255, 255, 255, 0.1);
		border-color: var(--turquoise);
		box-shadow: 0 20px 40px rgba(64, 224, 208, 0.2);
		z-index: 5;
	}

	.teacher-image {
		width: 180px;
		height: 180px;
		margin: 0 auto 2rem;
		border-radius: 50%;
		overflow: hidden;
		border: 4px solid transparent;
		background: var(--gradient);
		padding: 4px;
	}

	.teacher-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 50%;
	}

	.teacher-card h3 {
		font-size: 1.3rem;
		font-weight: 600;
		color: var(--text-light);
		margin-bottom: 0.5rem;
	}

	.teacher-card p {
		color: var(--text-gray);
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.teachers {
			padding: 60px 0;
		}

		.teachers .section-title {
			font-size: 1.5rem;
			margin-bottom: 1rem;
		}

		.teacher-card {
			padding: 2.5rem;
			min-width: calc(100% - 2.5rem);
			min-height: 350px;
		}

		.teacher-image {
			width: 150px;
			height: 150px;
		}

		.carousel-btn {
			width: 40px;
			height: 40px;
			font-size: 1.5rem;
		}

		.prev-btn {
			left: -20px;
		}

		.next-btn {
			right: -20px;
		}
	}
</style>

<script>
	// Teachers Carousel functionality
	document.addEventListener('DOMContentLoaded', () => {
		const container = document.getElementById('teachersContainer');
		const prevBtn = document.getElementById('prevBtn');
		const nextBtn = document.getElementById('nextBtn');
		
		let currentIndex = 0;
		const teacherCards = container.querySelectorAll('.teacher-card');
		const totalCards = teacherCards.length;
		
		// Calculate cards per view based on screen size
		const getCardsPerView = () => window.innerWidth <= 768 ? 1 : 2;
		const getCardWidth = () => {
			const card = teacherCards[0];
			return card.offsetWidth + parseFloat(getComputedStyle(container).gap);
		};
		
		const updateCarousel = () => {
			const cardsPerView = getCardsPerView();
			const cardWidth = getCardWidth();
			const translateX = -(currentIndex * cardWidth);
			container.style.transform = `translateX(${translateX}px)`;
			
			// Update button states
			prevBtn.style.opacity = currentIndex === 0 ? '0.5' : '1';
			nextBtn.style.opacity = currentIndex >= totalCards - cardsPerView ? '0.5' : '1';
		};
		
		prevBtn.addEventListener('click', () => {
			if (currentIndex > 0) {
				currentIndex--;
				updateCarousel();
			}
		});
		
		nextBtn.addEventListener('click', () => {
			const cardsPerView = getCardsPerView();
			if (currentIndex < totalCards - cardsPerView) {
				currentIndex++;
				updateCarousel();
			}
		});
		
		// Handle window resize
		window.addEventListener('resize', () => {
			const cardsPerView = getCardsPerView();
			if (currentIndex >= totalCards - cardsPerView) {
				currentIndex = Math.max(0, totalCards - cardsPerView);
			}
			updateCarousel();
		});
		
		// Initialize
		updateCarousel();
	});
</script>