<footer class="footer">
	<div class="container">
		<div class="footer-content">
			<div class="footer-logo">
				<img src={`${import.meta.env.BASE_URL}star.png`} alt="LetCode Academy" />
			</div>
			<div class="footer-text">
				<p>© 2025 LetCode Academy. Bütün hüquqlar qorunur.</p>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: var(--dark-bg);
		padding: 3rem 0 2rem;
		border-top: 1px solid rgba(64, 224, 208, 0.1);
	}

	.footer-content {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-wrap: wrap;
		gap: 2rem;
	}

	.footer-logo img {
		height: 40px;
		width: auto;
	}

	.footer-text p {
		color: var(--text-gray);
		margin: 0;
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
			gap: 1.5rem;
		}

		.footer-logo img {
			height: 35px;
		}
	}
</style>