<style>
	.footer {
		background: var(--dark-bg);
		padding: 3rem 0 2rem;
		border-top: 1px solid rgba(64, 224, 208, 0.1);
	}

	.footer-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-wrap: wrap;
		gap: 2rem;
	}

	.footer-logo img {
		height: 40px;
		width: auto;
	}

	.footer-text p {
		color: var(--text-gray);
		margin: 0;
		font-size: 0.9rem;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		width: 40px;
		height: 40px;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--text-gray);
		transition: all 0.3s ease;
		text-decoration: none;
	}

	.social-links a:hover {
		background: var(--gradient);
		color: white;
		transform: translateY(-2px);
	}

	.social-links svg {
		width: 20px;
		height: 20px;
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
			gap: 1.5rem;
		}

		.footer-logo img {
			height: 35px;
		}
	}
</style>